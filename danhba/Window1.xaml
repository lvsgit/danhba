<Window x:Class="danhba.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:danhba"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Window1" Height="450" Width="800">

    <Grid>
        <StackPanel Width="300">
            <StackPanel Margin="10">
                <TextBox Name="Name" Text="{Binding Path=Name}"/>
                <Label Content="Ten" />

                <TextBox Name="Number" Text="{Binding Path=Number}"/>
                <Label Content="Số DT" />
            </StackPanel>

            <Border      
                    Background="#eee"
                    Padding="5"
                    Margin="0 20 0 0">
                <StackPanel 
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button Click="Button_Click">OK</Button>
                    <Button Click="Button_Delete_Click" Margin="8 0">Delete</Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
